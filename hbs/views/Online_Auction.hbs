<div class="hero-wrap ftco-degree-bg" 
style="background-image: url('https://d2v9y0dukr6mq2.cloudfront.net/video/thumbnail/B2b8RSzfgivu3v9nb/videoblocks-online-shopping-isometric-composition-animation-available-in-4k-uhd-fullhd-and-hd-3d-loopable-realistic-video-footage_h1xaoqkcg_thumbnail-full08.png');" 
data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text justify-content-center align-items-center">
          	<div class="col-lg-9 col-md-6 ftco-animate d-flex align-items-end text text-center" >
          		<div class="text text-center">
	            	<h1 class="mb-4" style="margin: 0 auto; font-weight: bold; color:blue; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">SÀN GIAO DỊCH TRỰC TUYẾN</h1>
            	</div>
          	</div>
        </div>
    </div>
</div>

<div class="mouse">
	<a href="#" class="mouse-icon">
		<div class="mouse-wheel"><span class="ion-ios-arrow-round-down"></span></div>
	</a>
</div>	
<br><br>

<div class="text-left" style="margin-left: 50px;">
	<a class="btn btn-outline-success" href="/admin/user">
		<i class="fa fa-plus " aria-hidden="true" ></i>	
		User Management
	</a>
</div>

<section class="ftco-section ftco-agent ftco-no-pt">
	<div class="container">
		<div class="row justify-content-center pb-5">
			<div class="col-md-12 heading-section text-center ftco-animate">
				<span class="subheading">Online Auction</span>
				<h2 class="mb-4">Top 5 sản phẩm gần kết thúc</h2>
			</div>
		</div>
		{{#if this.empty}}
        <div class="card-body">
            <p class="card-text">Không có dữ liệu</p>
        </div>
        {{else}}
        <table class="table table-striped" >
            <tbody>
              	{{#each this.product}}
              	<tr>
                	<th scope="row"> 
                  		<td>
                    		<div class="col-md-5">
                      			<div class="property-wrap ftco-animate">
                        			<a href="#" class="img" style="background-image: url(images/work-1.jpg);"></a>
                        			<div class="text"  >
                          				<h3><a href="#">{{Name}}</a></h3>
                          				<span class="location">Giá hiện tại: {{Price}}</span><br>
                          				<span class="location">Ngày đăng: {{Date}}</span> <br>
                          				<span class="location">Số lượt ra giá: {{Turn}}</span> <br>
                          				<span class="location">Bidder đấu giá cao nhất: {{BidderId}}</span> <br>
                          				<span class="location">Thời gian còn lại: {{TimeRemain}}</span> <br>
                          				<a href="#" class="d-flex align-items-center justify-content-center btn-custom">
                            				<span class="glyphicon glyphicon-heart">&#10084;</span> 
                          				</a>
                        			</div>
                        			<a href="/admin/mobile/editMobile/{{ID}}">
                          				<img src="https://img.icons8.com/cotton/2x/edit.png" width="100" height="100">
                        			</a>    
                      			</div>
                    		</div>
                  		</td>
              		</th>
            	</tr>
            	{{/each}}
          	</tbody>
        </table>
        {{/if}}
	</div>
</section>

