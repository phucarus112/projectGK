					<li><a href="?page={{pre_value}}">&lt;</a></li>
					{{#each this.page_numbers}}
						{{#if isCurrentPage}}
							<li class="active"><a href="?page={{value}}">{{value}}</a></li>
						{{else}}
							<li><a href="?page={{value}}">{{value}}</a></li>
					{{/if}}
					  {{/each}}
					  <li><a href="?page={{next_value}}">&gt;</a></li>
				</ul>
			</div>
		</div>
	</div>
