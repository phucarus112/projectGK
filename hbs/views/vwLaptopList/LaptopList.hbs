			<i class="fa fa-plus " aria-hidden="true" ></i>	
			Add new Laptop
				</a>
			</div>
	</form>

	<section class="ftco-section goto-here">
    	<div class="container">
			{{#if this.empty}}
			<div class="card-body">
				<p class="card-text">
					Không có dữ liệu
				</p>
			</div>
			{{else}}
    			{{#each this.laptop}}
				<div class="col-md-5">
        		<div class="property-wrap ftco-animate">
        			<a href="#" class="img" style="background-image: url(/imgs/sp/{{ID}}/main_thumb.jpg);"></a>
        			<div class="text"  >
        				<h3><a href="#">{{NAME}}</a></h3>
        				<span class="location">Giá hiện tại: {{format PRICE}}</span><br>
						<span class="location">Số lượt ra giá: {{Turn}}</span> <br>
						<span class="location">Bidder đấu giá cao nhất: {{BidderId}}</span> <br>
						<span class="location">Thời gian còn lại: {{TimeRemain}}</span> <br>
        				<a href="#" class="d-flex align-items-center justify-content-center btn-custom">
        					<span class="glyphicon glyphicon-heart">&#10084;</span> 
        				</a>
        			</div>
					<a href="/admin/laptop/editLaptop/{{ID}}">
						<img src="https://img.icons8.com/cotton/2x/edit.png" width="100" height="100">
					</a>
					
        		</div>
        	</div>
	{{/each}}
{{/if}}
       </div>
    </section>

		<div class="row mt-5">
